{
  "name": "neura-syntax-highlighter",
  "displayName": "Neura Syntax Highlighter",
  "description": "A syntax highlighting extension for the Neura programming language. This extension provides color coding and syntax highlighting to enhance the development experience for Neura developers in Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neura",
        "aliases": [
          "Neura",
          "neura"
        ],
        "extensions": [
          ".neu"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
        "light": "./images/neura-icon.png",
        "dark": "./images/neura-icon.png"
      }
      }
    ],
    "grammars": [
      {
        "language": "neura",
        "scopeName": "source.neura",
        "path": "./syntaxes/neura.tmLanguage.json"
      }
    ]
  }
}